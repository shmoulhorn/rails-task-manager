<h1>All the tasks:</h1>

<h2> <%= %> </h2>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.name, task_path(task) %> (<%= task.status %>), <%= link_to "edit task", edit_task_path(task) %> , <%= link_to "delete task", task_path(task), method: :delete %> </li>
  <% end %>
</ul>

<p><%= link_to "Add a task", new_task_path %></p>
